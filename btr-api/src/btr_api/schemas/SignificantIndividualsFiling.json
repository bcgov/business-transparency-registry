{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "FilingAction": {
      "enum": [
        "add",
        "edit",
        "remove"
      ],
      "type": "string"
    },
    "ControlOfDirectors": {
      "properties": {
        "directControl": {
          "type": "boolean"
        },
        "indirectControl": {
          "type": "boolean"
        },
        "significantInfluence": {
          "type": "boolean"
        },
        "inConcertControl": {
          "type": "boolean"
        }
      },
      "type": "object",
      "required": [
        "directControl",
        "indirectControl",
        "significantInfluence",
        "inConcertControl"
      ]
    },
    "ControlOfSharesI": {
      "properties": {
        "registeredOwner": {
          "type": "boolean"
        },
        "beneficialOwner": {
          "type": "boolean"
        },
        "indirectControl": {
          "type": "boolean"
        },
        "inConcertControl": {
          "type": "boolean"
        }
      },
      "type": "object",
      "required": [
        "registeredOwner",
        "beneficialOwner",
        "indirectControl",
        "inConcertControl"
      ]
    },
    "SignificantIndividual": {
      "properties": {
        "controlType": {
          "$ref": "#/definitions/ControlOfDirectors"
        },
        "missingInfoReason": {
          "type": "string"
        },
        "percentOfShares": {
          "type": "number",
          "maximum": 100
        },
        "percentOfVotes": {
          "type": "number",
          "maximum": 100
        },
        "profile": {
          "$ref": "./significant-individual/Profile.json#/definitions/Profile"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "action": {
          "$ref": "#/definitions/FilingAction"
        }
      },
      "type": "object",
      "required": [
        "controlType",
        "percentOfShares",
        "percentOfVotes",
        "profile",
        "startDate",
        "action"
      ]
    },
    "SignificantIndividualFiling": {
      "properties": {
        "businessIdentifier": {
          "type": "string"
        },
        "folioNumber": {
          "type": "string"
        },
        "effectiveDate": {
          "type": "string",
          "format": "date"
        },
        "significantIndividuals": {
          "items": {
            "$ref": "#/definitions/SignificantIndividual"
          },
          "type": "array"
        },
        "certified": {
          "type": "boolean"
        }
      },
      "type": "object",
      "required": [
        "businessIdentifier",
        "folioNumber",
        "effectiveDate",
        "significantIndividuals",
        "certified"
      ]
    }
  },
  "$ref": "#/definitions/SignificantIndividualFiling"
}
